  body
  //-var selected = 'upload'; //default
  -var menu = { 'upload': '/upload', 'register' : '/register', 'multiple': '/multiple', 'master': '/master' };
  div.header
    div.navbar.navbar-default.navbar-static-top.navbar-inverse
      div.container-fluid
        div.navbar-header
          button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#bs-navbar-collapse-1" aria-expanded="false")
            span.sr-only Toggle navigation
            span.icon-bar
          a.navbar-brand(href="#") Recruitment
        //- div.collapse.navbar-collapse(id="bs-navbar-collapse-1")
          ul.nav.navbar-nav
            li
              a(href='/master' ) Master View
                span.sr-only current
            li.dropdown.active 
              a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Candidates 
                span.caret
              ul.dropdown-menu
                li
                 a(href='/upload' ) Multi upload CVs
                li
                  a(href='/register' ) Register single candidate
                li
                  a(href='/multiple' ) Multiple candidate view
            li.dropdown
              a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Screening
                span.caret
              ul.dropdown-menu
                li
                 a(href='/screening?type=random' ) Random screening
                li
                  a(href='/screening?type=diversity' ) Focus on diversity screening -//
        div.collapse.navbar-collapse(id="bs-navbar-collapse-1")
          ul.nav.navbar-nav
            each val, key in menu
              if selected === key
                li.active
                  a(href=val, title=key) #{key}
              else
                li
                  a(href=val, title=key)= key

    block content

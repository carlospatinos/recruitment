extends layout

block content
  h1= title
  p You can upload max 20 CV at a time. Format of the name will help you prepopullate values in the form to store details about candidates. "Name - School - Score.pdf"
  
  div.container
    div.content
      form.form-horizontal(id="uploadForm" enctype="multipart/form-data" action="users/api/cv" method="post")
        input.span3(type="file" name="candidateCVs" multiple)
        input.btn(type="submit", value="Upload CV(s)")
        input(type='text' id='random' name='random')
        span(id = "status")
